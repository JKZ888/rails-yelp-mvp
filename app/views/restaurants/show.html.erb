<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>

<div>

<div>
<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<h3><p><%= @restaurant.category %></p></h3>
<%= @restaurant.phone_number %>

<p><%= link_to 'edit', edit_restaurant_path(@restaurant)  %></p>
<p><%= link_to 'delete', restaurant_path(@restaurant),
method: :delete,
data: {confirm: "Are you sure?"} %></p>
</div>

<div class="row card-reviews">

   <% @restaurant.reviews.each do |review| %>
   <div class="col-xs-12 col-sm-10 col-sm-offset-1">
       <%= review.content %>
       <%= review.rating %>
    <% end %>
   </div>
   <%= link_to  "Poster une review", new_restaurant_review_path(@restaurant), class:"btn btn-primary"  %>

</div>


</div>


